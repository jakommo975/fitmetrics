<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    tools:context=".ChallengeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="30dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                style="@style/InputLayoutStyle">
                <TextView
                    style="@style/LabelStyle"
                    android:text="Kliky"
                    />
                <EditText
                    android:id="@+id/pushupsField"
                    style="@style/InputStyle"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/InputLayoutStyle">
                <TextView
                    style="@style/LabelStyle"
                    android:text="Drepy"
                    />
                <EditText
                    android:id="@+id/squatsField"
                    style="@style/InputStyle"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>
            <LinearLayout
                style="@style/InputLayoutStyle">
                <TextView
                    style="@style/LabelStyle"
                    android:text="Brušáky"
                    />
                <EditText
                    android:id="@+id/situpsField"
                    style="@style/InputStyle"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>

            <Button
                android:id="@+id/setChallengeButton"
                style="@style/ButtonStyle"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:text="Nastav výzvu"
                />

            <LinearLayout
                android:id="@+id/challengeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    style="@style/CaloriesCardViewStyle"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        style="@style/CaloriesCardLayoutStyle"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <TextView
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/pushupsText"
                            android:text="Kliky:"
                            />

                        <CheckBox
                            android:id="@+id/pushupsCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="1.25"
                            android:scaleY="1.25"
                             />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/CaloriesCardViewStyle"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        style="@style/CaloriesCardLayoutStyle"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/squatsText"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:text="Drepy:"
                            />

                        <CheckBox
                            android:id="@+id/squatsCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="1.25"
                            android:scaleY="1.25"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    style="@style/CaloriesCardViewStyle"
                    android:layout_marginTop="20dp"
                    >
                    <LinearLayout
                        style="@style/CaloriesCardLayoutStyle"
                        android:padding="0dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/situpsText"
                            android:textSize="20sp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:text="Brušáky:"
                            />

                        <CheckBox
                            android:id="@+id/situpsCheckBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="1.25"
                            android:scaleY="1.25" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/challengeCompletedCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginHorizontal="30dp"
                style="@style/CaloriesCardViewStyle"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ccffcc"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="#008800"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="Dnešná výzva je splnená!"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>